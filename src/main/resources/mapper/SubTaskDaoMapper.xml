<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yimq.transaction.dao.SubTaskDao">

    <resultMap id="resultMap" type="com.yimq.transaction.entity.SubTaskEntity">
        <id property="id" column="id" jdbcType="INTEGER" />
        <result property="messageId" column="message_id" jdbcType="INTEGER" />
        <result property="type" column="type" jdbcType="INTEGER" />
        <result property="data" column="data" javaType="java.lang.Object" jdbcType="VARCHAR" typeHandler="com.yimq.transaction.utils.JSONHandler" />
        <result property="status" column="status" jdbcType="INTEGER" />
        <result property="createTime" column="created_at" jdbcType="TIMESTAMP" />
        <result property="updateTime" column="updated_at" jdbcType="TIMESTAMP" />
    </resultMap>

    <!-- COIN的基础列名 -->
    <sql id="Base_Column_List">
       id,message_id,type,data,status,created_at,updated_at
  </sql>

    <sql id="Insert_Column_List">
        id,message_id,type,data,status,created_at,updated_at
    </sql>

    <update id="saveOrUpdateSubTask" parameterType="com.yimq.transaction.entity.ProcessesEntity">
        insert into yimq_subtasks
        (<include refid="Insert_Column_List" />)
        values (
            #{id,jdbcType=INTEGER},#{messageId,jdbcType=INTEGER},#{type,jdbcType=INTEGER},
            #{data,jdbcType=VARCHAR,javaType=java.lang.Object,typeHandler=com.yimq.transaction.utils.JSONHandler},
            #{status,jdbcType=INTEGER},#{createTime,jdbcType=TIMESTAMP}
        )
        on duplicate key update
        status=values(status)
    </update>


    <select id="selectSubTaskByIdForUpdate" resultMap="resultMap" >
        select <include refid="Base_Column_List" /> from yimq_subtasks
        where id = #{id,jdbcType=INTEGER}
        for update
    </select>

    <select id="selectSubTaskById" resultMap="resultMap" >
        select <include refid="Base_Column_List" /> from yimq_subtasks
        where id = #{id,jdbcType=INTEGER}
    </select>


</mapper>