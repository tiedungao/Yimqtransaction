<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yimq.transaction.dao.UserDao">
    
    <resultMap id="baseMap" type="com.yimq.transaction.entity.UserEntity" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="status" property="status" jdbcType="INTEGER" />
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP" />
        <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP" />
    </resultMap>

    <!-- COIN的基础列名 -->
    <sql id="Base_Column_List">
      id,username,status,created_at,updated_at
  </sql>

    <sql id="Insert_Column_List">
        id,username,status,created_at,updated_at
    </sql>

    <update id="saveOrUpdateUser"  useGeneratedKeys="true" keyProperty="id" parameterType="com.yimq.transaction.entity.UserEntity">
        insert into users
        (<include refid="Insert_Column_List" />)
        values (
            #{id,jdbcType=INTEGER},#{username,jdbcType=VARCHAR},#{status,jdbcType=INTEGER},
            #{createdAt,jdbcType=TIMESTAMP},#{updatedAt,jdbcType=TIMESTAMP}
        )
        on duplicate key update
        username=values(username),
        status=values(status)
    </update>


    <select id="selectUserByIdForUpdate" parameterType="java.lang.Integer" resultMap="baseMap" >
        select <include refid="Base_Column_List" /> from users
        where id = #{id,jdbcType=INTEGER}
        for update
    </select>

    <delete id="deleteUserById" parameterType="java.lang.Integer" >
        delete from users where id = #{userId,jdbcType=INTEGER}
    </delete>


</mapper>